<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="myBatis.Carinfo">
    <!-- <resultMap type="com.icss.pojo.Stuinfo" id="rmStuinfo"> -->
    <resultMap type="com.icss.pojo.test.Carinfo" id="rmCarinfo">
        <!-- 将实体类中的属性与数据库中的字段对应 -->
        <result property="CarId" column="CarId"/>
	    <result property="PId" column="PId"/>
	    <result property="carName" column="carName"/>
	    <result property="carType" column="carType"/>  
	    <result property="price" column="price"/>
    </resultMap>
    
    
    <!-- 查询
    <select id="selectAll" resultMap="rmCourse_info">
        select * from course_info_demo
    </select>
     -->
    <select id="selectCarinfoByCarName" parameterType="String" 
        resultMap="rmCarinfo">
    	select *from Carinfo ci where ci.carName like #{carName}  
    </select>
    
    <select id="selectCarinfoByCarType" parameterType="String" 
        resultMap="rmCarinfo">
    	select *from Carinfo ci where ci.carType like #{carType}  
    </select>
